<%= render 'custom/header' %>
<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card rounded-4">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Log in</h2>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-outline mb-4">
                  <%= f.label :email, class: "form-label", for: "form3Example1cg" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",id: "form3Example1cg", class: "form-control form-control-lg" %>
                </div>
                <div class="form-outline mb-4">
                  <%= f.label :password, class: "form-label", for: "form3Example4cg" %><br />
                  <%= f.password_field :password, autocomplete: "current-password", id: "form3Example4cg", class: "form-control form-control-lg" %>
                </div>
                <% if devise_mapping.rememberable? %>
                  <div class="form-outline mb-4">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>
                <div class="d-flex justify-content-center">
                  <%= f.submit "Log in", class:"btn btn-primary btn-block btn-lg gradient-custom-4" %>
                </div>
              <% end %>
              <p class="text-center text-muted mt-5 mb-0">Don't have an account? 
                <a href="#!" class="fw-bold text-body">
                  <%= render "devise/shared/links" %>
                </a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
