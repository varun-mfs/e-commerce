<%# <p id="notice"><%= notice</p> %>
<%= render 'custom/header' %>
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>
<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<p>
  <strong>Stock:</strong>
  <%= @product.in_stock ? 'Available' : 'Currently unavailable' %>
</p>
<% if @product.image.attached? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag @product.image, :size => '100%xauto' %>
  </p>
<% end %>
<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary' %>
<%= link_to 'Back', products_path, class: 'btn btn-secondary' %>
